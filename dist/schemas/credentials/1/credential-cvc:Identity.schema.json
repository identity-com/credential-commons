{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "credential-cvc:Identity-v1",
  "type": "object",
  "properties": {
    "id": {
      "type": "string"
    },
    "issuer": {
      "type": "string"
    },
    "issuanceDate": {
      "type": "string"
    },
    "identifier": {
      "type": "string"
    },
    "expirationDate": {
      "type": [
        "null",
        "string"
      ]
    },
    "version": {
      "type": "string"
    },
    "type": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "additionalProperties": false
    },
    "claim": {
      "type": "object",
      "properties": {
        "identity": {
          "type": "object",
          "properties": {
            "name": {
              "type": "object",
              "properties": {
                "givenNames": {
                  "type": "string"
                },
                "familyNames": {
                  "type": "string"
                },
                "otherNames": {
                  "type": "string"
                }
              },
              "required": [
                "givenNames"
              ],
              "additionalProperties": false
            },
            "dateOfBirth": {
              "type": "object",
              "properties": {
                "day": {
                  "type": "number",
                  "minimum": 1,
                  "maximum": 31
                },
                "month": {
                  "type": "number",
                  "minimum": 1,
                  "maximum": 12
                },
                "year": {
                  "type": "number",
                  "minimum": 1901
                }
              },
              "required": [
                "day",
                "month",
                "year"
              ],
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    },
    "proof": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string"
        },
        "merkleRoot": {
          "type": "string"
        },
        "anchor": {
          "type": "object",
          "properties": {
            "subject": {
              "type": "object",
              "properties": {
                "pub": {
                  "type": "string"
                },
                "label": {
                  "type": "string"
                },
                "data": {
                  "type": "string"
                },
                "signature": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "walletId": {
              "type": "string"
            },
            "cosigners": {
              "type": "array",
              "items": {
                "type": "object"
              },
              "additionalProperties": false
            },
            "authority": {
              "type": "object",
              "properties": {
                "pub": {
                  "type": "string"
                },
                "path": {
                  "type": "string"
                }
              },
              "additionalProperties": false
            },
            "coin": {
              "type": "string"
            },
            "tx": {
              "type": "object",
              "properties": {},
              "additionalProperties": false
            },
            "network": {
              "type": "string"
            },
            "type": {
              "type": "string"
            },
            "civicAsPrimary": {
              "type": "boolean"
            },
            "schema": {
              "type": "string"
            },
            "value": {
              "type": "object",
              "properties": {},
              "additionalProperties": false
            }
          },
          "additionalProperties": false
        },
        "leaves": {
          "type": "array",
          "items": {
            "type": "object"
          },
          "additionalProperties": false
        }
      },
      "additionalProperties": false
    }
  },
  "additionalProperties": false
}